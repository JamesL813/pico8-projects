function _init()
	stars={}
end

function _update()
	update_stars()
end

function _draw()
cls()
	draw_stars()
end

function add_star()
	local x=rnd(128)
	local y=rnd(128)
	local dx=(64-x)/20
	local dy=(64-y)/20
	
	add(stars,{x=x,y=y,dx=dx,dy=dy})
	
end

function update_stars()

	add_star()
	
	for st in all(stars) do
	 st.x+=st.dx
	 st.y+=st.dy
	 st.dx*=.94
	 st.dy*=.94
	 
	 if mid(62,st.x,66)==st.x
	  and mid(62,st.y,66)==st.y then
	  del(stars,st)
	 end
	 
	end

end

function draw_stars()

	for st in all(stars) do
		pset(st.x,st.y,7)
	end

end
